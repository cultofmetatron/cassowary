-if user_signed_in?
  %li{class:"dropdown"}
    %a{:class => "dropdown-toggle", "data-toggle" => "dropdown"}
      = current_user.username
      %span{class:'caret'}
    %ul{class:"dropdown-menu"}
      %li= link_to "Logout", destroy_user_session_path, :method => :delete
-else
  %li= link_to "Login", new_user_session_path
