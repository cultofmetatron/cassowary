= form_for @post, :url => post_path(@post.url_slug) do |f|
  -if @post.errors.any?
    #error_explanation
      %div{class:"alert"}
        %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.hidden_field :user_id
  .field
    = f.label :url_slug
    = f.text_field :url_slug
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description, {style:"width:50%"}
  .field
    = f.label "Content"
    = f.text_area :body, cols: 80
  .field
    = f.label :published, {style:"display:inline"}
    = f.check_box :published
  
  %span{class:"actions"}
    = f.submit 'Save'