= form_for @post do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :blog_id
    = f.number_field :blog_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :date_created
    = f.datetime_select :date_created
  .field
    = f.label :published
    = f.number_field :published
  .field
    = f.label :date_published
    = f.datetime_select :date_published
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
