!!! 5
%html
  %head
    %title Cassorwary - A blog engine for rails!!
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application" 
    = csrf_meta_tags 
  %body
    %div{class:"navbar navbar-fixed-top"}
      %div{class:"navbar-inner"}
        %div{class:"container"}
          %a{class:"brand", href:"/"}
            Peter de Croos
          %ul{class:"nav"}
            %li= link_to "Home", "/", { class:""}
            -if user_signed_in?
              %li{class:"dropdown"}
                %a{:class => "dropdown-toggle", "data-toggle" => "dropdown"}
                  Blog
                  %span{class:'caret'}
                %ul{class:"dropdown-menu"}
                  %li= link_to 'View Posts', posts_path
                  %li= link_to '(+) New Post', new_post_path, { :class => ""}
            -else
              %li{class:""}
                %li= link_to 'Blog', posts_path
          %form{class:"navbar-search pull-right"}
            %input{type:"text", class:"search-query span4", placeholder:"Search"}      
          %ul{class:"nav pull-right"}
            -if user_signed_in?
              %li{class:"dropdown"}
                %a{:class => "dropdown-toggle", "data-toggle" => "dropdown"}
                  = current_user.username
                  %span{class:'caret'}
                %ul{class:"dropdown-menu"}
                  %li= link_to "Logout", destroy_user_session_path, :method => :delete
            -else
              %li= link_to "Login", new_user_session_path
            %li{class:"divider-vertical"}
          
                
            
    %div{class:"container-fluid", id:"main"}
      %div{class:"row-fluid"}
        %div{ id:"side_nav" , class:"span2"}
          -if user_signed_in?
            %h1 logged in as
            %span{class:"label label-info"}= @user.username
            %p{class:"actions"}
              =link_to "Logout", destroy_user_session_path, :method => :delete
          -else
            hello
        %div{class:"span10"}
          =yield
                    