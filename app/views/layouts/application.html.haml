!!! 5
%html
  %head
    %title Cassorwary - A blog engine for rails!!
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application" 
    = csrf_meta_tags 
  %body
    =render :partial => "navigation_partial/topnav"
    
    %div{class:"container", id:"main"}
      %div{class:"row"}
        %div{ id:"side_nav" , class:"span2"}
          -if user_signed_in?
            %h1 logged in as
            %span{class:"label label-info"}= @user.username
            %p{class:"actions"}
              =link_to "Logout", destroy_user_session_path, :method => :delete
          -else
            hello
        %div{class:"span9"}
          =yield
                    